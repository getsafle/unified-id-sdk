{
  "name": "@unified-id/relayer-sdk",
  "version": "1.0.0",
  "description": "Official Unified ID Relayer SDK for blockchain identity management and cross-chain operations",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "docs": "jsdoc src -d docs",
    "example:basic": "node examples/basic-usage.js",
    "example:advanced": "node examples/advanced-usage.js",
    "example:signature": "node examples/signature-generation.js"
  },
  "keywords": [
    "unified-id",
    "blockchain",
    "ethereum",
    "identity",
    "cross-chain",
    "relayer",
    "sdk",
    "web3",
    "defi",
    "identity-management",
    "ethereum-sdk",
    "blockchain-sdk"
  ],
  "author": {
    "name": "Unified ID Team",
    "email": "team@unified-id.com",
    "url": "https://unified-id.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unified-id/relayer-sdk.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/unified-id/relayer-sdk/issues"
  },
  "homepage": "https://github.com/unified-id/relayer-sdk#readme",
  "dependencies": {
    "ethers": "^6.13.5",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.0",
    "rollup": "^4.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "jsdoc": "^4.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/unified-id"
  }
